<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorPurple</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorPurple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorPurple</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColorPurple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="statusBarThemColor">@color/primaryColorPurple</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/statusBarThemColor</item>

        <!-- Customize your theme here. -->
        <item name="materialCardViewStyle">@style/CardApp</item>

    </style>

    <style name="AppTheme.ThemeIndigo">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorIndigo</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorIndigo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorIndigo</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColorIndigo</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="statusBarThemColor">@color/primaryColorIndigo</item>
        <item name="materialCardViewStyle">@style/CardApp.Indigo</item>

    </style>


    <style name="AppTheme.ThemeLime">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorLime</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorLime</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorLime</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColorLime</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="statusBarThemColor">@color/primaryColorLime</item>
        <item name="materialCardViewStyle">@style/CardApp.Lime</item>

    </style>

    <style name="CardApp" parent="Widget.MaterialComponents.CardView">
    </style>

    <style name="CardApp.Indigo">
        <item name="cardCornerRadius">@dimen/indigoCornerRadius</item>
        <item name="cardBackgroundColor">@color/primaryColorIndigo</item>
        <item name="cardElevation">20dp</item>
    </style>

    <style name="CardApp.Lime">
        <item name="cardCornerRadius">@dimen/limeCornerRadius</item>
        <item name="cardBackgroundColor">@color/primaryColorLime</item>
        <item name="cardElevation">5dp</item>
    </style>

</resources>